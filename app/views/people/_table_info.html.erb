<table class="table table-bordered">
    <thead>
        <tr>
            <th><%= t 'people.name' %></th>
            <th><%= t 'people.avatar' %></th>
            <th><%= t 'people.email' %></th>
            <th><%= t 'people.degree' %></th>
            <th colspan="3" align="center"><%= t 'actions' %></th>
        </tr>
    </thead>
    <tbody>
        <% @people.each do |person| %>
        <tr>
            <td><%= person.name %></td>
            <td><%= image_tag person.avatar.url(:thumb) %></td>
            <td><%= person.email %></td>
            <td><%= person.degree %></td>
            <td><%= link_to t('show'), person %></td>
            <td><%= link_to t('edit'), edit_person_path(person) %></td>
            <td><%= link_to t('destroy'), person, method: :delete, data: { confirm: t('are_you_sure') } %></td>
        </tr>
        <% end %>
    </tbody>
</table>
