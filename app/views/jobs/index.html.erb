<div class="box-header with-border">
  <%= link_to t('.add') , new_job_path, class: 'btn btn-default' %>
</div>

<div class="box-body">
  <p id="notice"><%= notice %></p>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th><%= t 'jobs.company_name' %></th>
        <th><%= t 'jobs.position' %></th>
        <th><%= t 'jobs.description' %></th>
        <th><%= t 'jobs.start' %></th>
        <th><%= t 'jobs.end' %></th>
        <th><%= t 'jobs.person' %></th>
        <th colspan="3"><%= t 'actions' %></th>
      </tr>
    </thead>
    <tbody>
      <% @jobs.each do |job| %>
        <tr>
          <td><%= job.company_name %></td>
          <td><%= job.position %></td>
          <td><%= job.description %></td>
          <td><%= job.start %></td>
          <td><%= job.end %></td>
          <td><%= job.person_id %></td>
          <td><%= link_to t('show'), job %></td>
          <td><%= link_to t('edit'), edit_job_path(job) %></td>
          <td><%= link_to t('destroy'), job, method: :delete, data: { confirm: t('are_you_sure') } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
