<table class="table table-bordered">
    <thead>
        <tr>
            <th><%= t 'jobs.company_name' %></th>
            <th><%= t 'jobs.position' %></th>
            <th><%= t 'jobs.description' %></th>
            <th><%= t 'jobs.start' %></th>
            <th><%= t 'jobs.end' %></th>
            <% if params[:controller] != 'people' %>
            <th><%= t 'jobs.person' %></th>
            <% end %>
            <th colspan="3"><%= t 'actions' %></th>
        </tr>
    </thead>
    <tbody>
        <% @jobs.each do |job| %>
        <tr>
            <td><%= job.company_name %></td>
            <td><%= job.position %></td>
            <td><%= job.description %></td>
            <td><%= job.start %></td>
            <td><%= job.end %></td>
            <% if params[:controller] != 'people' %>
            <td><%= job.person.name %></td>
            <% end %>
            <td><%= link_to t('show'), job %></td>
            <td><%= link_to t('edit'), edit_job_path(job) %></td>
            <td><%= link_to t('destroy'), job, method: :delete, data: { confirm: t('are_you_sure') } %></td>
        </tr>
        <% end %>
    </tbody>
</table>
