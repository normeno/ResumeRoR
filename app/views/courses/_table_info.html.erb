<table class="table table-bordered">
    <thead>
        <tr>
        <th><%= t 'courses.name' %></th>
        <th><%= t 'courses.description' %></th>
        <% if params[:controller] != 'people' %>
        <th><%= t 'courses.person' %></th>
        <% end %>
        <th colspan="3"><%= t 'actions' %></th>
        </tr>
    </thead>
    <tbody>
        <% @courses.each do |course| %>
        <tr>
            <td><%= course.name %></td>
            <td><%= course.description %></td>
            <% if params[:controller] != 'people' %>
            <td><%= course.person_id %></td>
            <% end %>
            <td><%= link_to t('show'), course %></td>
            <td><%= link_to t('edit'), edit_course_path(course) %></td>
            <td><%= link_to t('destroy'), course, method: :delete, data: { confirm: t('are_you_sure') } %></td>
        </tr>
        <% end %>
    </tbody>
</table>
