<table class="table table-bordered">
    <thead>
        <tr>
            <th><%= t 'people.entity_name' %></th>
            <th><%= t 'people.career' %></th>
            <th><%= t 'people.start' %></th>
            <th><%= t 'people.end' %></th>
            <% if params[:controller] != 'people' %>
            <th><%= t 'people.person' %></th>
            <% end %>
            <th colspan="3" align="center"><%= t 'actions' %></th>
        </tr>
    </thead>
    <tbody>
        <% @educations.each do |education| %>
        <tr>
            <td><%= education.entity_name %></td>
            <td><%= education.career %></td>
            <td><%= education.start %></td>
            <td><%= education.end %></td>
            <% if params[:controller] != 'people' %>
            <td><%= education.person.name %></td>
            <% end %>
            <td><%= link_to t('show'), education %></td>
            <td><%= link_to t('edit'), edit_education_path(education) %></td>
            <td><%= link_to t('destroy'), education, method: :delete, data: { confirm: t('are_you_sure') } %></td>
        </tr>
        <% end %>
    </tbody>
</table>
