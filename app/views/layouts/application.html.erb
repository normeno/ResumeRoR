<!DOCTYPE html>
<html>
<head>
  <title>Resume</title>
  <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
  <%= stylesheet_link_tag    'application', '//maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css' %>
  <%= stylesheet_link_tag    'application', '//code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css' %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body class="hold-transition skin-green-light sidebar-mini">
  <div class="wrapper">
    <%= render "layouts/backend/header" %>
    <%= render "layouts/backend/sidebar" %>

    <div class="content-wrapper">

      <section class="content-header">
        <% locale_path = controller_name+"."+action_name %>
        <h1>
          <%= t locale_path+'.title' %>
          <small><%= t locale_path+'.subtitle' %></small>
        </h1>
        <ol class="breadcrumb">
          <li>
            <%= t 'home' %>
          </li>
          <li><%= link_to params[:controller].capitalize, '#' %></li>
        </ol>
      </section>

      <section class="content">
        <div class="row">
          <div class="col-md-12">
            <div class="box">
              <%= yield %>
            </div>
          </div>
        </div>
      </section>

    </div>

  </div>
    <script type="text/javascript">
        $(document).ready(function(){
            $('.monthpicker').datepicker({
                language: "es",
                format: "mm-yyyy",
                viewMode: "months",
                minViewMode: "months"
            });
        });
    </script>
</body>
</html>
